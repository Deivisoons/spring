    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Somando</title>
</head>
<body>
<%

int numero1 = Integer.parseInt(request.getParameter("numero1"));
int numero2 = Integer.parseInt(request.getParameter("numero2"));
String operacao = request.getParameter("operacao");

switch(operacao){
	case "Soma":
		out.print("Resultado da Soma é: "+numero1+numero2);
	break;
	case "Subtracao":
		out.print("Resultado da Subtração é: "+numero1 - numero2);
		break;
	case "Dividir":
		out.print("Resultado da Divisão é: "+numero1 / numero2);
		break;
	case "Multiplicar":
		out.print("Resultado da multiplicação é:"+numero1 * numero2);
		break;
		default:
			out.print("Selecione a Correta");
		}

%>
</body>
</html>